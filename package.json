    "prettier": "^3.1.0",
    "prompts": "^2.4.2",
    "prop-types": "^15.8.1",
    "react": "^18.2.0",
    "react-app-polyfill": "^3.0.0",
    "react-dev-utils": "^12.0.1",
    "react-dom": "^18.2.0",
    "react-refresh": "^0.14.0",
    "resolve": "^1.22.8",
    "resolve-url-loader": "^5.0.0",
    "rollup": "^3.29.4",
